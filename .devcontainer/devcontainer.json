{
    "name": "pycrtm",
    "build": {
        "dockerfile": "../Dockerfile",
        "options": [
            "--platform",
            "linux/amd64",
            "--ssh",
            "default",
            "--target",
            "crtm-builder"
        ],
        "args": {
            "COEF_TAR": "fix_REL-2.4.0.tgz"
        }
    },
    "remoteUser": "wxs",
    "initializeCommand": "./Get_CRTM_Binary_Files.sh",
    "mounts": [
        "source=${localEnv:DATA},target=/home/wxs/data,type=bind",
        "source=${localEnv:POETRY_CONFIG},target=/home/wxs/.config/pypoetry,type=bind",
        "source=${localEnv:CDSAPI_CONFIG},target=/home/wxs/.cdsapirc,type=bind"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/wxs/workspace,type=bind",
    "workspaceFolder": "/home/wxs/workspace",
    "postCreateCommand": "sudo chown -R $(id -u):$(id -g) /home/wxs/.config",
    "postStartCommand": "git apply 0001-Modifications-for-pygems-pseudodata.patch; cp setup.cfg pycrtm_/pycrtm_setup.txt", // use ';' to continue if the patch was already applied
    "postAttachCommand": "poetry install --no-root --all-extras --all-groups && poetry run pip install -e .",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "h5web.vscode-h5web",
                "tamasfe.even-better-toml",
                "ms-toolsai.jupyter",
                "docker.docker"
            ],
            "settings": {
                // "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.shell.linux": "/bin/bash", // This also works in older versions
                "python.linting.enabled": true,
                "python.formatting.provider": "ruff",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                },
                "python.analysis.exclude": [
                    "**/build/"
                ],
                "files.exclude": {
                    "**/build": true
                }
            }
        }
    }
}